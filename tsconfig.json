{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": false,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"], // алиас для корня проекта директории
      "~/*": ["./src/*"] // алиас для директории исходников
    }
  },
  "include": ["./src/**/*", "types/global.d.ts", "dependency.ts"],
  "exclude": ["./src/__tests__", "node_modules"]
}
